<!-- Navigation bar partial - included in all pages for consistent navigation -->
<nav>
  <a href="/">Home</a>
  
  <!-- Conditional navigation based on user authentication status -->
  <!-- 'user' variable comes from passUserToView middleware via res.locals -->
  <% if(user) { %>
    <!-- Links for authenticated users -->
    <a href="/users/<%=user._id%>/foods">View my Pantry</a>
    <a href="/users">Explore Our Community</a>
    <a href="/auth/sign-out">Sign Out</a>
  <% } else { %>
    <!-- Links for guest users (not logged in) -->
    <a href="/auth/sign-in">Sign In</a>
    <a href="/auth/sign-up">Sign Up</a>
  <% } %>
</nav>
